<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:cq="http://www.day.com/jcr/cq/1.0"
          xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Contact details"
          sling:resourceType="cq/gui/components/authoring/dialog">
    <content
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <contact
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                    composite="{Boolean}true">
                <field
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        name="./contact">
                    <items jcr:primaryType="nt:unstructured">
                        <contactGroup
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/well">
                            <items jcr:primaryType="nt:unstructured">
                                <name
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldLabel="Name"
                                        name="./contactName"/>
                                <email
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldLabel="Email"
                                        name="./contactEmail"/>
                                <isActive
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                        text="Is Active?"
                                        value="{Boolean}true"
                                        uncheckedValue="{Boolean}false"
                                        name="./isActive"/>
                                <comments
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                        fieldLabel="Comments"
                                        height="3em"
                                        name="./comments"
                                        useFixedInlineToolbar="{Boolean}true"/>
                                <occupation
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/radiogroup"
                                        fieldLabel="Occupation"
                                        name="./occupation">
                                    <items jcr:primaryType="nt:unstructured">
                                        <others
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/radio"
                                                text="Others"
                                                value="others"/>
                                        <dev
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/radio"
                                                text="Developer"
                                                value="dev"/>
                                        <user
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/radio"
                                                text="User"
                                                value="user"/>
                                    </items>
                                </occupation>
                                <country
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                        fieldLabel="Country"
                                        name="./country">
                                    <items jcr:primaryType="nt:unstructured">
                                        <us
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/option"
                                                text="US"
                                                value="US"/>
                                        <bangladesh
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/option"
                                                text="Bangladesh"
                                                value="Bangladesh"/>
                                        <others
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/option"
                                                text="Others"
                                                value="Others"/>
                                    </items>
                                </country>
                                <hobbies
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                        fieldLabel="Hobbies"
                                        name="./hobbies"
                                        multiple="{Boolean}true">
                                    <items jcr:primaryType="nt:unstructured">
                                        <hobby1
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/option"
                                                value="Cricket"
                                                text="Cricket"/>
                                        <hobby2
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/option"
                                                value="Football"
                                                text="Football"/>
                                        <hobby3
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/option"
                                                value="Hockey"
                                                text="Hockey"/>
                                        <hobby4
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/option"
                                                value="Badminton"
                                                text="Badminton"/>
                                        <hobby5
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/option"
                                                value="Gardening"
                                                text="Gardening"/>
                                        <hobby6
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/option"
                                                value="Singing"
                                                text="Singing"/>
                                        <hobby7
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/option"
                                                value="Others"
                                                text="Others"/>
                                    </items>
                                </hobbies>
                                <selectedPath
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                        fieldDescription="Link to another resource."
                                        fieldLabel="Link"
                                        nodeTypes="dam:Asset, nt:file, nt:folder, cq:Page,  sling:Folder, sling:OrderedFolder"
                                        name="./selectedPath"
                                        required="{Boolean}true"
                                        rootPath="/content"/>
                                <tags
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="cq/gui/components/coral/common/form/tagfield"
                                        fieldLabel="Tags"
                                        multiple="{Boolean}true"
                                        name="./tags"/>
                            </items>
                        </contactGroup>
                    </items>
                </field>
            </contact>
        </items>
    </content>
</jcr:root>
